<div class="container">
    <h2>Add a new product</h2>
    <a href="/employee">Employee home</a>
    <% if (messages.info) { %>
    <p style="color: red"><%= messages.info %></p>
    <% } %>
    <form action="/employee/newproduct" method="POST">
      <br />
      <div>
        <label for="upc">UPC</label>
        <input type="text" id="upc" name="upc" required autocomplete="off" />
      </div>
      <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required autocomplete="off" />
      </div>
      <div>
        <label for="brand">Brand</label>
        <input type="text" id="brand" name="brand" required autocomplete="off" />
      </div>
      <div>
        <label for="price">Price</label>
        <input type="text" id="price" name="price" required autocomplete="off" />
      </div>
      <div>
        <label for="qty">Qty</label>
        <input type="number" id="qty" name="qty" required autocomplete="off" />
      </div>
      <button type="submit">Add</button>
    </form>
</div>
  