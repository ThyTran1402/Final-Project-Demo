<div class="container">
    <h2>Update an existing product</h2>
    <a href="/employee">Employee home</a>
    <% if (messages.error) { %>
    <p style="color: red"><%= messages.info %></p>
    <% } %>
    <form action="/employee/updateproduct" method="POST">
      <br />
      <div>
        <label for="upc">UPC of product</label>
        <input type="text" id="upc" name="upc" required />
      </div>
      <br />
      <div>
        <label for="price">Price</label>
        <input type="text" id="price" name="price" required />
      </div>
      <div>
        <label for="qty">Qty</label>
        <input type="number" id="qty" name="qty" required />
      </div>
      <button type="submit">Update</button>
    </form>
  </div>
  